{
    "name": "vangelis/todoordiephp",
    "description": "Write TODOs in code that ensure you actually do them",
    "keywords": [
        "todo",
        "todoordiephp"
    ],
    "homepage": "https://github.com/vangelis/todoordiephp",
    "license": "MIT",
    "authors": [
        {
            "name": "Evangelos Dimitriadis",
            "email": "edimitriadis@proton.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "pestphp/pest": "^3.4",
        "laravel/pint": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Vangelis\\TodoOrDie\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vangelis\\TodoOrDie\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
